#include<iostream>
#include<conio.h>

using namespace std;

int main()
{
	int arr[7][3];
	
	int a;
	cout << "Input the temperatures recorded in Province A: " << endl;
	for (a = 0; a < 7; a++)
		cin >> arr[a][1];

	cout << "Input the temperatures recorded in Province B: " << endl;
	for (a = 0; a < 7; a++)
		cin >> arr[a][2];

	cout << "Input the temperatures recorded in Province C: " << endl;
	for (a = 0; a < 7; a++)
		cin >> arr[a][3];

	for (a = 0; a < 7; a++)
		cout << "Province A, Day " << a + 1 << " = " << arr[a][1] << endl;

	for (a = 0; a < 7; a++)
		cout << "Province B, Day " << a + 1 << " = " << arr[a][2] << endl;

	for (a = 0; a < 7; a++)
		cout << "Province C, Day " << a + 1 << " = " << arr[a][3] << endl;
		
	_getch();
	return 0;
}
